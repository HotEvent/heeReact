{
  "compilerOptions": {
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES6",
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "Didact.createElement",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["ESNext", "DOM"]
  },
  "exclude": ["node_modules", "webpack", "postcss.config.js"],
  "include": ["src"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
